{
  "name": "@fhenixprotocol/fhenix-foundry-template",
  "description": "Foundry-based template for developing FHE Solidity smart contracts with Fhenix",
  "version": "1.1.0",
  "author": {
    "name": "Fhenix Protocol",
    "url": "https://github.com/fhenixprotocol"
  },
  "dependencies": {
    "@fhenixprotocol/contracts": "0.3.1",
    "@openzeppelin/contracts": "^5.0.1",
    "fhenixjs": "^0.4.1"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.3.3",
    "solhint": "^3.6.2",
    "bun": "^1.1.22",
    "@types/node": "^22.13.4",
    "dotenv": "^16.4.7",
    "ethers": "^5.7.2",
    "telegraf": "^4.16.3",
    "tslint": "^6.1.3",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "bot": "tsc && node dist/app.js",
    "build:ts": "tsc",
    "start:ts": "node dist/app.js",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  }
}
